@model IEnumerable<PROG_WEB_APP.Models.Product>

<h2>Products By Date</h2>

@if (!Model.Any())
{
    <p>No products found for this date.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Date</th>
                <th>Farmer Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.PName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.Date.ToShortDateString()</td>
                    <td>@product.Farmer?.FName</td>
                </tr>
            }
        </tbody>
    </table>
}
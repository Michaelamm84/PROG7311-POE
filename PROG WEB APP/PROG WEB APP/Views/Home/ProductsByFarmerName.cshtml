@model IEnumerable<Product>

@{
    ViewData["Title"] = "Farmer's Products";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No products found for this farmer.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.PName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}